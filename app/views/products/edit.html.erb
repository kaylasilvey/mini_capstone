<h1>Edit Product</h1>
<form action="/products/<%= @product.id %>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <div>
    Name: <input type="text" name="name" value="<%= @product.name %>">
  </div>
  <div>
    Price: <input type="text" name="price" value="<%= @product.price %>">
  </div>
  <div>
    Description: 
    <br>
    <textarea cols="30" rows="10" name="description"><%= @product.description %>
    </textarea>
  </div>
  <div>
    Supplier: <select name="supplier_id">
      <% @supplier.each do |supplier| %>
        <option value="<%= supplier.id %>" selected="<%= supplier.id %>"><%= supplier.name %></option>
        <% end %>
    </select>
  </div>
  <input type="submit" value="Submit Product Edits">
</form>